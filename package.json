{
  "name": "exercicio-frontend",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": {
    "name": "Anderson Roberto Slivinski",
    "url": "https://github.com/arslivinski"
  },
  "license": "ISC",
  "scripts": {
    "start": "json-server --watch db.json",
    "clean": "rimraf dist",
    "copy": "cpy '**/*' '!index.html' '../dist/' --cwd=public --parents",
    "prebuild": "npm run clean && npm run copy",
    "build": "webpack --env=production",
    "prewatch": "npm run clean",
    "watch": "webpack-dev-server --env=development --progress",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "lint": "eslint ./"
  },
  "browserslist": {
    "production": [
      "> 0.5%",
      "last 2 versions",
      "Firefox ESR",
      "not dead",
      "not IE 11",
      "not IE_Mob 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "cpy-cli": "^3.1.1",
    "css-loader": "^4.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "json-server": "^0.16.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,html,md}": "prettier --write",
    "*.js": "eslint"
  }
}
